{
    "variables": {
        "elk_version": "{{env `ELK_VERSION`}}"
    },
    "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": "true",
      "changes": [
        "USER kibana",
        "WORKDIR /home/kibana/kibana-{{user `elk_version`}}-linux-x86_64",
        "EXPOSE 5601",
        "ENTRYPOINT [\"/bin/bash\", \"bin/kibana\"]"
      ]
    }],
    "provisioners": [
        {
            "type": "file",
            "source": "./provisioner",
            "destination": "$HOME"
        },
        {
            "type": "shell",
            "inline": ["apt-get update -y && apt-get install python3 -y && apt-get install ansible -y"]
        },
        {
            "type": "ansible-local",
            "playbook_dir": "provisioner",
            "playbook_file": "./provisioner/playbook.yml"
        }
    ],
    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "antonioazambuja/elasticsearch",
                "tag": "{{user `elk_version`}}"
            }
        ]
    ]
  }